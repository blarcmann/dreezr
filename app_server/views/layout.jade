doctype html
html(ng-app="dreezrApp")
  head
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel="stylesheet", href="/exlib/amelia.bootstrap.min.css")
    link(rel="stylesheet", href="/exlib/font-awesome.min.css")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    .navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          a.navbar-brand(href='/') Dreezr
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-main')
            span.icon-bar
            span.icon-bar
            span.icon-bar
        #navbar-main.navbar-collapse.collapse
          ul.nav.navbar-nav
            li
              a(href='/about/') About
    .container
      div(ng-view)
        block content
        footer
          .row
            .col-xs-12
              small &copy; yemiOdetola 2018
    script(src='/exlib/jquery-3.3.1.min.js', type='text/javascript')
    script(src='/exlib/bootstrap.min.js', type='text/javascript')
    script(src="/angular/angular.min.js")
    script(src="/angular/angular-route.min.js")
    //- script(src="/angular/dreezr.min.js")
    script(src="/app.js")
    script(src="/home/home.controller.js")
    script(src='/javascripts/validation.js')
    script(src='/common/services/dreezrData.service.js')
    script(src='/common/services/geolocation.service.js')
    script(src="/common/directives/ratingStars/ratingStars.directive.js")
    script(src="/common/filters/formatDistance.filter.js")



